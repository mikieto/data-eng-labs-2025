{
  "name": "data-eng-labs-2025",
  // Official Dev Container image with Python 3.11
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "workspaceMount": "source=${localWorkspaceFolder}/..,target=/workspaces,type=bind",
  "workspaceFolder": "/workspaces/data-eng-labs-2025",

  "postCreateCommand": "pip install -r requirements.txt",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  }
}
